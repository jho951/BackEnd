[mysqld]
# 서버 포트 (기본 포트는 3306)
port=3306

# 서버의 문자셋과 정렬 규칙 설정
character-set-server=utf8mb4
collation-server=utf8mb4_general_ci

# 외부에서의 접속을 허용하려면 bind-address를 0.0.0.0로 설정
bind-address=0.0.0.0

# 기본 저장소 엔진 (MySQL의 InnoDB 엔진을 사용)
default-storage-engine=INNODB

# 메모리 기반 버퍼 크기 (개발 환경에서는 성능을 조금 더 높여줄 수 있음)
innodb_buffer_pool_size=512M  # 데이터베이스의 캐시를 더 많이 사용
query_cache_size=64M  # 쿼리 캐시를 활성화하여 성능 향상

# 연결 수 설정 (개발 환경에서는 좀 더 많은 연결을 허용할 수 있음)
max_connections=200

# 테이블 캐시 크기 설정
table_open_cache=200

# 로그 파일 크기 설정 (개발에서는 로그를 많이 남길 수 있음)
innodb_log_file_size=256M

# 자동 커밋 비활성화 (개발에서 트랜잭션을 명시적으로 관리하려면 유용)
autocommit=1

# SQL 모드 설정 (엄격한 SQL 모드로 오류를 정확하게 잡을 수 있음)
sql_mode=NO_ENGINE_SUBSTITUTION,STRICT_TRANS_TABLES

# 로그 수준 설정 (개발 중 디버깅을 위해 로그를 많이 남길 수 있음)
log-error=/var/log/mysql/mysql_error.log

# slow query 로그 활성화 (개발 시 성능을 테스트할 때 유용)
slow_query_log=1
slow_query_log_file=/var/log/mysql/mysql-slow.log
long_query_time=2  # 2초 이상 걸리는 쿼리만 기록

# 시간대 설정 (Asia/Seoul)
default-time-zone='Asia/Seoul'