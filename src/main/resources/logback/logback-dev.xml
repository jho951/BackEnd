<configuration scan="true" scanPeriod="30 seconds">

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_DEV_PATTERN}</pattern>
        </encoder>
    </appender>

    <appender name="SYSTEM_LOGSTASH" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
        <destination>logstash:5000</destination>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <!-- MDC에서 log_type을 동적으로 가져옴 -->
            <customFields>{"log_type": "%X{log_type}"}</customFields>
        </encoder>
    </appender>

    <appender name="API_LOGSTASH" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
        <destination>logstash:5000</destination>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <!-- MDC에서 log_type을 동적으로 가져옴 -->
            <customFields>{"log_type": "%X{log_type}"}</customFields>
        </encoder>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="SYSTEM_LOGSTASH"/>
        <appender-ref ref="API_LOGSTASH"/>
    </root>

    <!-- 패키지별 로그 레벨 조절 (선택사항) -->
    <logger name="org.hibernate.SQL" level="DEBUG" />
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE" />
    <logger name="org.springframework" level="DEBUG"/>
</configuration>
